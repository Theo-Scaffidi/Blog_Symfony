<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Aventures gustatives{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="{{asset('css/style.css')}}">
        <link rel="stylesheet" href="{{asset('css/bootstrap.min.css')}}"
        <script src="{{asset('js/bootstrap.min.js')}}"></script>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {# {{ encore_entry_link_tags('app') }} #}
        {% endblock %}

        {% block javascripts %}
            {# {{ encore_entry_script_tags('app') }} #}
        {% endblock %}
    </head>
    <body>
        <div class="navbar">
            <a class="nav-link" href="{{path('home')}}">ACCUEIL</a>
            <a class="nav-link" href="{{path('recipes')}}">RECETTES</a>
            <a class="nav-link" href="{{path('about')}}">A PROPOS</a>
            <a class="nav-link" href="{{path('contact')}}">CONTACT</a>
            {% if is_granted('ROLE_ADMIN') %}
                <a class="nav-link" href="{{path('admin')}}">ADMINISTRATEUR</a>
            {% endif %}
            {% if is_granted('ROLE_AUTEUR') %}
                <a class="nav-link" href="{{path('create_recipes')}}">CREER RECETTES</a>
            {% endif %}
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a class="nav-link" href="{{path('logout')}}">DECONNEXION</a>
            {% else %}
                <a class="nav-link" href="{{path('login')}}">CONNEXION</a>
            {% endif %}            
        </div>
        <img class="mx-auto d-block logo" src="{{ asset('image/logo.png') }}"></img>
        <h3 class="title mainTitle">AVENTURES GUSTATIVES</h3>
        <hr class="line1">
        {% block body %}
        {% endblock %}
        <footer>
            <div class="footer">
                <p class="text_footer">© 2022 par AVENTURES GUSTATIVES</p>
                <div class="reseau_sociaux_footer">
					<a href="https://www.instagram.com/?hl=fr" class="mx-auto logo_sociaux_footer"><img class="mx-auto logo_sociaux" src="{{ asset('image/instagram.png') }}"></img></a>
					<a href="https://fr-fr.facebook.com/" class="mx-auto logo_sociaux facebook_footer"><img class="mx-auto logo_sociaux facebook" src="{{ asset('image/facebook.png') }}"></img></a>
					<a href="https://www.pinterest.fr/" class="mx-auto logo_sociaux pinterest_footer"><img class="mx-auto logo_sociaux pinterest" src="{{ asset('image/pinterest.png') }}"></img></a>
					<a href="https://www.youtube.com/" class="mx-auto logo_sociaux_footer"><img class="mx-auto logo_sociaux" src="{{ asset('image/youtube.png') }}"></img></a>
				</div>                
            </div>
        </footer>
    </body>
    <script type="text/javascript">
        var elements = document.getElementsByClassName("reduc_text");
        for(i = 0; i < elements.length; i++){
            elements[i].textContent = elements[i].textContent.substring(0, 200) + " [...]";
        }
    </script>
    <script type="text/javascript">
        var elements = document.getElementsByClassName("reduc_text2");
        for(i = 0; i < elements.length; i++){
            elements[i].textContent = elements[i].textContent.substring(0, 50) + " [...]";
        }
    </script>
</html>

