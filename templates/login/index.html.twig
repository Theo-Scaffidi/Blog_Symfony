{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <h4 class="title">Connexion</h4>
    <div class="login">
        <form action="{{ path('login') }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <input type="text" class="login_email" placeholder="Email" id="username" name="_username" value="{{ last_username }}"/>
            <br><input placeholder="Mot de passe" type="password" id="password" name="_password"/>

            {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/account"/> #}

            <br><button class="login_btn" type="submit">Connexion</button>
        </form>
    </div>
    <div class="login">
        <a class="register_button" href="{{path('register')}}">S'inscrire</a>
    </div>
{% endblock %}